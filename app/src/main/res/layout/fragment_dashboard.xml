<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Page.Admin.Dashboard.DashboardFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEmployee"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cvDivision"
        android:layout_margin="18dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icEmployee"
                android:src="@drawable/ic_employee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icEmployee"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Employee"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDivision"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvEmployee"
        android:layout_margin="18dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icDivision"
                android:src="@drawable/ic_division"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icDivision"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Division"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTopic"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvEmployee"
        app:layout_constraintEnd_toStartOf="@id/cvPeriod"
        android:layout_margin="18dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivTopic"
                android:src="@drawable/ic_topic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTopic"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Topic"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPeriod"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/cvDivision"
        app:layout_constraintStart_toEndOf="@id/cvTopic"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPeriod"
                android:src="@drawable/ic_period"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtGenerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPeriod"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Generate Topic"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGenerate"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/cvTopic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivGenerate"
                android:src="@drawable/ic_generate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivGenerate"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Start Appraisal"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>